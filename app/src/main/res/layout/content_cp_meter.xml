<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/container_my_cp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingTop="70dp"
        android:layout_marginStart="@dimen/std_padding"
        android:layout_marginEnd="@dimen/std_padding"
        android:weightSum="10">

        <ImageButton
            android:id="@+id/btn_my_cp_minus"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_weight="3" />

        <TextView
            android:id="@+id/tv_my_cp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/std_padding"
            android:layout_marginStart="@dimen/std_padding"
            android:text="@string/default_vp"
            android:textSize="@dimen/header_text_size"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:layout_weight="4" />

        <ImageButton
            android:id="@+id/btn_my_cp_plus"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_weight="3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_opp_cp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/container_my_cp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingTop="70dp"
        android:layout_marginStart="@dimen/std_padding"
        android:layout_marginEnd="@dimen/std_padding"
        android:weightSum="10">

        <ImageButton
            android:id="@+id/btn_opp_cp_minus"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_weight="3" />

        <TextView
            android:id="@+id/tv_opp_cp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/std_padding"
            android:layout_marginStart="@dimen/std_padding"
            android:text="@string/default_vp"
            android:textSize="@dimen/header_text_size"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:layout_weight="4" />

        <ImageButton
            android:id="@+id/btn_my_opp_plus"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_weight="3" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>